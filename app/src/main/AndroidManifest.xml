<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.dllo.foodpie">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".base.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/customTitle">
        </activity>
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadActivity"
            android:theme="@style/customTitle">
        </activity>
        <activity
            android:name=".SettingActivity"
            android:theme="@style/customTitle">
        </activity>
        <activity
            android:name=".eat.DescriptionActivity"
            android:theme="@style/customTitle">
        </activity>
        <activity
            android:name=".eat.HomePageDescriptionActivity"
            android:theme="@style/customTitle">
        </activity>
        <activity
            android:name=".food.FoodDescriptionActivity"
            android:theme="@style/customTitle">
        </activity>
        <activity
            android:name=".food.SearchActivity"
            android:theme="@style/customTitle">
        </activity>
        <activity
            android:name=".food.AnalyzeActivity"
            android:theme="@style/customTitle">
        </activity>
        <activity android:name=".LogonActivity"
                  android:theme="@style/customTitle">
        </activity>
        <activity android:name=".collect.CollectActivity"
                  android:theme="@style/customTitle">

        </activity>
    </application>

</manifest>