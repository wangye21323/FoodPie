<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginTop="10dp"
              android:background="#fff"
              android:id="@+id/ll_eat_beautyfood_else"
              android:layout_width="match_parent"
              android:layout_height="106dp">


    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#000"
            android:id="@+id/tv_eat_beauty_else_title"
            android:layout_marginTop="6dp"
            android:text="111111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img_eat_beauty_else_images_one"
                android:src="@mipmap/ic_back_dark_center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:background="#fff"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img_eat_beauty_else_images_two"
                android:src="@mipmap/ic_back_dark_center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:background="#fff"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img_eat_beauty_else_images_three"
                android:src="@mipmap/ic_back_dark_center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_eat_beauty_else_source"
                android:text="22222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_eat_beautyfood_one"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/img_eat_knowledge_eye"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_eat_beauty_else_tail"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="111111"
                android:layout_toRightOf="@id/img_eat_beautyfood_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>