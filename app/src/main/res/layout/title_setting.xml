<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="#fff"
              android:layout_height="48dp">

    <ImageButton
        android:layout_marginLeft="5dp"
        android:id="@+id/img_setting_img"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@mipmap/ic_back_dark_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="设置"
        android:textColor="#000"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_setting_img"
        android:layout_toEndOf="@+id/img_setting_img"
        android:layout_alignBottom="@+id/img_setting_img"
        android:layout_toRightOf="@+id/img_setting_img"/>
</RelativeLayout>