<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="#fff"
              android:layout_height="48dp">

    <ImageButton
        android:layout_marginLeft="5dp"
        android:id="@+id/iBtn_Eat_back"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@mipmap/ic_back_dark_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_eat_description"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iBtn_Eat_back"
        android:layout_toEndOf="@+id/iBtn_Eat_back"
        android:layout_alignBottom="@+id/iBtn_Eat_back"
        android:layout_toRightOf="@+id/iBtn_Eat_back"/>
</RelativeLayout>