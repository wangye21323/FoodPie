<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.dllo.foodpie.MainActivity">

    <FrameLayout
        android:id="@+id/frame_main"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/rg_main"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_food"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:textColor="@color/main_text_color"
                    android:layout_width="0dp"
                    android:drawableTop="@drawable/mainfood"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="食物百科"/>

                <RadioButton
                    android:layout_gravity="center"
                    android:id="@+id/rb_eat"
                    android:button="@null"
                    android:textColor="@color/main_text_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/maineat"
                    android:text="逛吃"
                    android:layout_height="match_parent"/>

                <RadioButton

                    android:id="@+id/rb_my"
                    android:button="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/mainmy"
                    android:text="我的"
                    android:textColor="@color/main_text_color"
                    android:layout_height="match_parent"/>


            </RadioGroup>

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>
