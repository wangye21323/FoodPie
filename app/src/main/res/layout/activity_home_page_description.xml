<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".eat.HomePageDescriptionActivity">

    <include layout="@layout/title_description"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <com.example.dllo.foodpie.weiget.CircleImageView
            android:layout_marginLeft="8dp"
            app:isCircle="true"
            android:src="@mipmap/ic_back_dark_center"
            android:id="@+id/img_eat_homepage_description_user"
            android:layout_centerVertical="true"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_eat_homepage_description_user"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_eat_homepage_description_name"
                android:text="11111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_eat_homepage_description_data"
                android:text="22222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_eat_homepage_description"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
