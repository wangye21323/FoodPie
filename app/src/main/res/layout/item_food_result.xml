<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="68dp">

    <com.example.dllo.foodpie.weiget.CircleImageView

        android:src="@mipmap/ic_back_dark_center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        app:isCircle="true"
        android:id="@+id/img_food_result_thumb"
        android:layout_width="34dp"
        android:layout_height="34dp"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/img_food_result_thumb"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="111"
            android:id="@+id/tv_food_result_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_food_result_calory"
                android:text="1111"
                android:textColor="#f00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="千卡/100克"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:src="@mipmap/ic_back_dark_center"
        android:id="@+id/img_food_result_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>