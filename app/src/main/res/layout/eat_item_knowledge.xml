<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginTop="10dp"
              android:background="#fff"
              android:id="@+id/ll_eat_knowledge"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="86dp">
<LinearLayout
    android:layout_marginLeft="10dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="3.0"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#000"
        android:id="@+id/tv_eat_knowledge_title"
        android:text="111111111111111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:id="@+id/tv_eat_knowledge_source"
            android:text="111111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:background="@null"
            android:layout_marginLeft="38dp"
            android:src="@mipmap/img_eat_knowledge_eye"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_eat_knowledge_tail"
            android:text="222"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>



    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/img_eat_knowledge_images"
        android:layout_width="wrap_content"
        android:layout_weight="0.8"
        android:src="@mipmap/ic_home_search"
        android:layout_height="match_parent"/>


</LinearLayout>