<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_food_search_all"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader
        android:id="@+id/rv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_food_search_history"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="最近搜过"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ListView
                android:id="@+id/lv_food_search_near"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
            <RelativeLayout
                android:id="@+id/rv_food_search_del"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_food_search_la_ji"
                        android:src="@mipmap/ic_trash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/img_food_search_la_ji"
                        android:text="清空历史记录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader>

    <!--<TextView-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:text="大家都在搜"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->




</FrameLayout>